                    .page-filter-content__item
                        +checkbox({step: 1, label: 'Категория события 7', disabled:'false'})
                    .page-filter-content__item
                        +checkbox({step: 1, label: 'Категория события 8', disabled:'false'})
                .page-filter-content__column
