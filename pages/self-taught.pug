extend ./_layout-white-bg
block header
    +header('header--light')
block content
    .leadingpage
        .content-dark
            .content-wrapper
                .leadingpage-head
                    +bread-crumbs('bread-crumbs--white', 'Главная страница', 'Для обучающихся самостоятельно')
                    .leadingpage-head__wrapper
                        .leadingpage-head__description
                            h1 Для обучающихся самостоятельно
                            p Небольшой текст про то что это за сайт, что тут можно выбрать школу из 5000 вариантов, самостоятельно изучить более 300 материалов, попробовать свои силы на 200 конкурсах.
                        .leadingpage-head__img
                            img(src="/images/selftaught.png")

        .container.leadingpage-analysis
            .content-wrapper
                +page-subtitle('Разборы')
