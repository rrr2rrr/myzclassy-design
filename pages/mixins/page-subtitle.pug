mixin page-subtitle(title, description, button, white=false)
    .page-subtitle
        .page-subtitle__wrapper
            h2=title
            - if(button)
                - if (white)
                    a(href="#").btn=button
                - else
                    .page-subtitle__button
                        img(src="images/svg/arrow.svg", alt="")
                        a(href="#").btn.btn-reverse=button
        if description
            .page-subtitle__description=description
        block
